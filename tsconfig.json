{
   "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/*": ["./*"],
         "@/lib/*": ["./src/lib/*"],
         "@/Base/*": ["./src/components/Base/*"],
         "@/components*": ["./src/components/*"],
         "@/VehicleDetails/*": ["./src/components/VehicleDetails/*"],
         "@/Providers*": ["./src/Providers/*"],
         "@/Images*": ["./src/assets/images/*"],
         "@/Techtree*": ["./src/components/Techtree/*"],
         // TYPES
         "@Types/*": ["./types/*"],
         "@VehicleTypes/*": ["./types/VehicleDetails/*"],
         // Contexts
         "@/ModuleContext/*": ["./src/components/VehicleDetails/Context/Module/*"],
         "@/DetailsContext/*": ["./src/components/VehicleDetails/Context/Details/*"],
         "@/TomatoContext/*": ["./src/components/VehicleDetails/Context/TomatoContext/*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
